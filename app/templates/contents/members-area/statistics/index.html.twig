{% extends 'layouts/content/members-area.html.twig' %}

{% block title %}{{ 'Statistics'|trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>{{ 'Statistics'|trans }}</h1>
    <ol class="breadcrumb">
        <li>
            <a href="{{ url('members-area') }}">
                {{ 'Home' | trans }}
            </a>
        </li>
        <li class="active">
            {{ 'Statistics' | trans }}
        </li>
    </ol>
    <div id="main-content">
        <div class="row">
            <div class="col-md-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        {{ 'Users' | trans }}
                    </div>
                    <ul class="list-group">
                        <li class="list-group-item">
                            {{ 'Total' | trans }}
                            <span class="badge">
                                {{ app['orm.em'].getRepository('Application\\Entity\\UserEntity').countAll() }}
                            </span>
                        </li>
                    </ul>
                </div> <!-- /.panel -->
            </div> <!-- /.col-md-3 -->
            <div class="col-md-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        {{ 'Emojis' | trans }}
                    </div>
                    <ul class="list-group">
                        <li class="list-group-item">
                            {{ 'Total' | trans }}
                            <span class="badge">
                                {{ app['orm.em'].getRepository('Application\\Entity\\EmojiEntity').countAll() }}
                            </span>
                        </li>
                    </ul>
                </div> <!-- /.panel -->
            </div> <!-- /.col-md-3 -->
            <div class="col-md-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        {{ 'Chat channels' | trans }}
                    </div>
                    <ul class="list-group">
                        <li class="list-group-item">
                            {{ 'Total' | trans }}
                            <span class="badge">
                                {{ app['orm.em'].getRepository('Application\\Entity\\ChatChannelEntity').countAll() }}
                            </span>
                        </li>
                        <li class="list-group-item">
                            {{ 'Private' | trans }}
                            <span class="badge">
                                {{ app['orm.em'].getRepository('Application\\Entity\\ChatChannelEntity').countAllPrivate(true) }}
                            </span>
                        </li>
                    </ul>
                </div> <!-- /.panel -->
            </div> <!-- /.col-md-3 -->
            <div class="col-md-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        {{ 'Chat channel messages' | trans }}
                    </div>
                    <ul class="list-group">
                        <li class="list-group-item">
                            {{ 'Total' | trans }}
                            <span class="badge">
                                {{ app['orm.em'].getRepository('Application\\Entity\\ChatChannelMessageEntity').countAll() }}
                            </span>
                        </li>
                    </ul>
                </div> <!-- /.panel -->
            </div> <!-- /.col-md-3 -->
        </div>
    </div>
{% endblock %}
