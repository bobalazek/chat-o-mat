{% extends 'layouts/content/members-area/chat.html.twig' %}

{% block title %}{{ 'Remove Message'|trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>{{ 'Remove Message'|trans }}</h1>
    <ol class="breadcrumb">
        <li>
            <a href="{{ url('members-area') }}">
                {{ 'Home' | trans }}
            </a>
        </li>
        <li>
            <a href="{{ url('members-area.chat') }}">
                {{ 'Chat' | trans }}
            </a>
        </li>
        <li>
            <a href="{{ url('members-area.chat.channels') }}">
                {{ 'Channels' | trans }}
            </a>
        </li>
        <li>
            <a href="{{ url('members-area.chat.channels.detail', { id : chatChannelMessage.getChatChannel().getId() }) }}">
                #{{ chatChannelMessage.getChatChannel() }}
            </a>
        </li>
        <li class="active">
            {{ 'Remove Message' | trans }}
        </li>
    </ol>
    <div class="alert alert-block alert-warning">
        <h4 class="alert-heading">{{ 'Warning!'|trans }}</h4>
        <p>{{ 'Are you sure you want to remove this message?'|trans }}</p>
        <p>
            <a class="btn btn-danger"
                href="{{ url('members-area.chat.channels.messages.remove', { id : chatChannelMessage.getId() }) }}?action=confirm">
                {{ 'Confirm'|trans }}
            </a>
            <a class="btn btn-success"
                href="{{ url('members-area.chat.channels.detail', { id : chatChannelMessage.getChatChannel().getId() }) }}">
                {{ 'Cancel'|trans }}
            </a>
        </p>
    </div>
{% endblock %}
